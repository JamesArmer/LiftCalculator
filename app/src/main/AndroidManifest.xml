<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fitness.liftcalculator"
    android:versionCode="3"
    android:versionName="Post-release bug fixes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Lift Calculator"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.fitness.liftcalculator.UpdateActivity"
            android:label="Update Lift Type"
            android:parentActivityName="com.fitness.liftcalculator.SubcategoryActivity" />
        <activity
            android:name="com.fitness.liftcalculator.PercentageActivity"
            android:parentActivityName="com.fitness.liftcalculator.SubcategoryActivity" />
        <activity
            android:name="com.fitness.liftcalculator.AddCategoryActivity"
            android:label="Add Lift Type"
            android:parentActivityName="com.fitness.liftcalculator.MainActivity" />
        <activity
            android:name="com.fitness.liftcalculator.AddSubcategoryActivity"
            android:label="Add Lift Name and Weight"
            android:parentActivityName="com.fitness.liftcalculator.SubcategoryActivity" />
        <activity
            android:name="com.fitness.liftcalculator.SubcategoryActivity"
            android:label="Lift subcategories"
            android:parentActivityName="com.fitness.liftcalculator.MainActivity" />
        <activity
            android:name="com.fitness.liftcalculator.MainActivity"
            android:label="Lift Calculator"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>